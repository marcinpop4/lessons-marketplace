# Database configuration
# The application builds the database connection URL from these individual variables
DB_HOST=localhost
DB_PORT=5432
DB_NAME=arts_marketplace
DB_USER=yourusername
DB_PASSWORD=yourpassword
DB_SSL=false
DB_POOL_SIZE=10

# Messaging configuration
MESSAGING_HOST=localhost
MESSAGING_PORT=5672
MESSAGING_USER=guest
MESSAGING_PASSWORD=guest
MESSAGING_VHOST=/
MESSAGING_RETRY_ATTEMPTS=5
MESSAGING_RETRY_DELAY=1000

# Server configuration
PORT=3001
NODE_ENV=development

# Authentication (used with jsonwebtoken package)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d 