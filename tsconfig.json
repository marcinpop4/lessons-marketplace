{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@frontend/*": ["frontend/*"],
      "@server/*": ["server/*"]
    },
    "types": ["vite/client"],
    "esModuleInterop": true
  },
  "include": [
    "shared/**/*",
    "frontend/**/*",
    "server/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}