{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node10",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    "paths": {
      "@shared/*": [
        "./shared/*"
      ],
      "@server/*": [
        "./server/*"
      ],
      "@frontend/*": [
        "./frontend/*"
      ],
      "@/*": [
        "./frontend/*"
      ],
      "@config/*": [
        "./frontend/config/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "strictBuiltinIteratorReturn": true,
    "alwaysStrict": true,
    "useUnknownInCatchVariables": true
  },
  "references": [
    {
      "path": "./shared/tsconfig.shared.json"
    },
    {
      "path": "./server/tsconfig.server.json"
    },
    {
      "path": "./frontend/config/tsconfig.app.json"
    }
  ],
  "files": [
    "./scripts/db-connection-test.ts",
    "./scripts/docker-debug.ts",
    "./scripts/docker-seed.ts",
    "./scripts/docker-test-runner.ts",
    "./scripts/install-jest-deps.ts",
    "./scripts/test-alias.ts",
    "./scripts/update-fly-deploy.ts",
    "./playwright.config.ts"
  ],
  "include": [
    "./scripts/**/*.ts",
    "./*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}