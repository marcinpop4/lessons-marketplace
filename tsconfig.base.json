{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@server/*": ["server/*"],
      "@frontend/*": ["frontend/*"],
      "@/*": ["*"]
    },
    "outDir": "dist",
    "rootDir": "."
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}